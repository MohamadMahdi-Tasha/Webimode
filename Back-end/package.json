{
	"name": "ako-express",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"start-old": "set NODE_ENV=production & pm2 start app.js --no-daemon",
		"dev-old": "set NODE_ENV=development & nodemon app.js --reset-cache",
		"dev": "npm run clean & npm run copy-files & set NODE_ENV=development & tsc-watch --onSuccess \"node dist/app.js\"",
		"build": "npm run clean & npm run copy-files & npx tsc ",
		"start": "set NODE_ENV=production & node dist/app.js",
		"start-local": "npm run clean & set NODE_ENV=production & npm run copy-files & npx tsc &  pm2 start dist/app.js --no-daemon",
		"clean": "rimraf ./dist",
		"copy-files": "node tools/copyAssets.js",
		"ako": "node commands.js",
		"kill": "pm2 kill",
		"restart": "pm2 restart ecosystem.config.cjs"
	},
